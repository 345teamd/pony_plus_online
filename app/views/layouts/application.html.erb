<!DOCTYPE html>
<html>
<head>
  <title>Store</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="navbar navbar-inverse navbar-fixed-top">
		<div class ="navbar-inner">
			<div class="container">
				<a class="btn btn-navbar" data-toggle="collapse" data-targets=".nav-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</a>
					
				<a class="brand" href="index.html">PonyPlus Online</a>
				<div class="nav-collapse">
					<ul class="nav">
					<li><a href="#">Account</a></li>
					<li><a href="#">Link 1</a></li>
					<li><a href="#">Link 2</a></li>
					</ul>
					<p class="navbar-text pull-right"><a data-toggle="modal" href="#login">Login <i class="icon-signing"></i></a></p>
					<p class=" navbar-text pull-right">&nbsp;&nbsp;</p>
					<from class="navbar-search pull-right" id="search">
						<div clas = "input-prepend">
							<span class="add-on"><i class="icon-search"></i></span>
							<input type="text" class="search-query" placeholder="Search">
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
	
	<!------Login---------->
	<div class="modal hide fade" id="login">
		<div class="modal-header">
			<a class="close" data-dismiss="modal">x</a>
			<h3>PonyPlus Online: Login</h3>
		</div>
		<div class="modal-body" id="longbody">
			<div class="row">
				<div class="span3">
					<form class="form-vertical">
						<input type="text" class="input" placeholder="Username or Email">
						<br>
						<input type="password" class="input" placeholder="Password">
						<button type="submit" class="btn btn-primary">Sign In</button>
					</form>
				</div>
			</div>
			<b>Help: </b><a href="#"><u>I Forgot my Username or password</u></a>
		</div>
		<div class="modal-footer">
			Don't have an account <a href="#"><u>Sign up Today</u></a>
			<a href="#" class="btn btn-danger" data-dismiss="modal">Close</a>
		</div>
	</div>
	
	
	<div class="container" style="margin-top: 50px">
		<div class="row">
			<div class="span2">
				Left Side Bar
			</div>
			<div class="span8">
				<%= yield %>
			</div>
			<div class="span2">
				Right Side Bar
			</div>
		</div>
	</div>
	<footer class="footer">
		<h4>PonyPlus Online</h4>
		<li><a href="#">Account</a></li>
		<li><a href="#">Link 1</a></li>
		<li><a href-"#">Link 2</a></li>
	</footer>
	
</body>
</html>
